<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="New Chat"
        android:id="@+id/newchatdialog_tv_Titel"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Phone Number:"
        android:id="@+id/newchatdialog_textView"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/newchatdialog_sw_groupChat"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/newchatdialog_et_phoneNumber"
        android:layout_below="@+id/newchatdialog_textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:width="300dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Name:"
        android:id="@+id/newchatdialog_textView2"
        android:layout_below="@+id/newchatdialog_tv_Titel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/newchatdialog_et_name"
        android:layout_below="@+id/newchatdialog_textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:elegantTextHeight="false"
        android:inputType="text"
        android:lines="1"
        android:maxLines="1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Group Chat"
        android:id="@+id/newchatdialog_textView3"
        android:layout_below="@+id/newchatdialog_et_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/newchatdialog_sw_groupChat"
        android:checked="false"
        android:layout_below="@+id/newchatdialog_et_name"
        android:layout_alignRight="@+id/newchatdialog_et_name"
        android:layout_alignEnd="@+id/newchatdialog_et_name" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/newchatdialog_ib_plus"
        android:layout_alignTop="@+id/newchatdialog_et_phoneNumber"
        android:layout_toRightOf="@+id/newchatdialog_et_phoneNumber"
        android:layout_alignBottom="@+id/newchatdialog_et_phoneNumber"
        android:layout_alignRight="@+id/newchatdialog_sw_groupChat"
        android:layout_alignEnd="@+id/newchatdialog_sw_groupChat"
        android:src="@drawable/plus_outline"
        android:onClick="newChatDialog_ib_plus"
        android:cropToPadding="false"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:layout_alignParentEnd="false"
        android:padding="20dp" />

</RelativeLayout>