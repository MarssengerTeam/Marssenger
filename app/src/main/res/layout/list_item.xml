<?xml version="1.0" encoding="UTF-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="1dp"
    android:layout_marginBottom="@dimen/chat_bottom_margin"
    android:layout_marginStart="@dimen/chat_vertical_margin"
    android:layout_marginLeft="@dimen/chat_vertical_margin"
    android:layout_marginEnd="@dimen/chat_vertical_margin"
    android:layout_marginRight="@dimen/chat_vertical_margin"
    android:layout_marginTop="@dimen/chat_top_margin"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/listitem_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/list_image_description"
            android:src="@drawable/ic_avatar"
            android:cropToPadding="false"
            android:scaleType="fitStart"
            android:adjustViewBounds="true"
            />

        <!-- name-->
        <TextView
            android:id="@+id/listitem_name"
            android:textSize="@dimen/list_element_text_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:textColor="@color/primary_text"
            android:background="@color/primary_light"
            android:maxLines="1"
            android:textAlignment="inherit"
            android:elegantTextHeight="true"
            android:layout_below="@id/listitem_image"
            android:paddingLeft="@dimen/text_padding"
            android:paddingRight="@dimen/text_padding"
            />

        <!-- last message -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/listitem_name"
            android:background="@color/primary_light"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/chat_bottom_margin"
            >
            <TextView
                android:id="@+id/listitem_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:maxLength="20"
                android:textColor="@color/secondary_text"
                android:layout_gravity="start"
                android:layout_weight="7"
                android:paddingLeft="@dimen/text_padding"
                android:paddingRight="@dimen/text_padding"
                />

            <!-- counter -->
            <TextView
                android:maxLength="3"
                android:id="@+id/listitem_counter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/accent"
                android:layout_gravity="end"
                android:layout_weight="1"
                android:textStyle="bold"
                />
        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>