<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/chat_width"
    android:layout_height="@dimen/chat_height"
    android:padding="@dimen/chat_padding"
    >
    <ImageView
        android:id="@+id/listitem_image"
        android:layout_width="@dimen/chat_width"
        android:layout_height="@dimen/list_item_image_height"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/list_image_description"
        android:src="@drawable/ic_avatar"
        android:layout_alignParentBottom="true"
        android:cropToPadding="true" />
    <TextView

        android:id="@+id/listitem_name"
        android:textSize="@dimen/list_element_text_size"
        android:layout_width="@dimen/chat_width"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="true"
        android:gravity="center_vertical"
        android:background="@color/primary800"
        android:layout_alignTop="@+id/listitem_image"
        android:layout_alignLeft="@+id/listitem_image"
        android:layout_alignStart="@+id/listitem_image"
        android:textColor="@color/chat_text_color"
        android:layout_alignRight="@+id/listitem_image"
        android:layout_alignEnd="@+id/listitem_image"
        android:maxLines="@dimen/list_item_max_lines"
        android:textAlignment="inherit"
        android:elegantTextHeight="true"
        android:paddingLeft="@dimen/list_element_padding"
        android:paddingRight="@dimen/list_element_padding"
        />
    <TextView
        android:id="@+id/listitem_text"
        android:layout_width="@dimen/chat_width"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:background="@color/accent700"
        android:maxLength="@dimen/message_max_length"
        android:textColor="@color/chat_text_color"
        android:paddingLeft="@dimen/list_element_padding"
        android:paddingRight="@dimen/list_element_padding"
        android:layout_alignBottom="@+id/listitem_image"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toRightOf="@+id/dividertextviewleft"
        android:layout_toEndOf="@+id/dividertextviewleft"
        />
    <TextView
        android:maxLength="@dimen/counter_max_length"
        android:id="@+id/listitem_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/chat_text_color"
        android:layout_alignTop="@+id/listitem_text"
        android:layout_toLeftOf="@+id/dividertextviewright"
        android:layout_toStartOf="@+id/dividertextviewright"
        android:layout_marginRight="@dimen/counter_end_margin"
        android:layout_marginEnd="@dimen/counter_end_margin" />

    <TextView
        android:id="@+id/dividertextviewright"
        android:textSize="@dimen/list_element_text_size"
        android:layout_width="@dimen/list_item_divider_width"
        android:layout_height="@dimen/list_item_image_height"
        android:layout_alignWithParentIfMissing="true"
        android:gravity="center_vertical"
        android:background="@color/chat_border_background"
        android:elegantTextHeight="true"
        android:layout_alignRight="@+id/listitem_image"
        android:layout_alignEnd="@+id/listitem_image"
        android:layout_below="@+id/listitem_name"
        android:layout_above="@+id/listitem_text" />

    <TextView
        android:id="@+id/dividertextviewleft"
        android:textSize="@dimen/list_element_text_size"
        android:layout_width="@dimen/list_item_divider_width"
        android:layout_height="@dimen/list_item_image_height"
        android:layout_alignWithParentIfMissing="true"
        android:gravity="center_vertical"
        android:background="@color/chat_border_background"
        android:elegantTextHeight="true"
        android:layout_alignLeft="@id/listitem_image"
        android:layout_alignStart="@id/listitem_image"
        android:layout_below="@+id/listitem_name"
        android:layout_above="@+id/listitem_text"
        />

</RelativeLayout>