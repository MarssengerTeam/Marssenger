<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_gravity="end"
    android:gravity="end"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"

    android:paddingBottom="@dimen/message_vertical_margin"
    android:paddingTop="@dimen/message_vertical_margin"

    android:layout_marginTop="@dimen/message_top_margin"
    android:layout_marginBottom="@dimen/message_bottom_margin"
    android:paddingStart="@dimen/message_vertical_margin"
    android:paddingLeft="@dimen/message_vertical_margin"
    android:paddingEnd="@dimen/message_vertical_margin"
    android:paddingRight="@dimen/message_vertical_margin"
    >

    <TextView
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/message_text_size"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="end"
        android:gravity="end"/>

    <TextView
        android:id="@+id/time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/time_text_size"
        android:layout_below="@id/message"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="end"
        android:gravity="end"
        />

</RelativeLayout>