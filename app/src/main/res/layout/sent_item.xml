<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/item_root"
    android:layout_gravity="end"
    android:gravity="end"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"

    android:layout_marginTop="@dimen/message_top_margin"
    android:paddingBottom="@dimen/message_bottom_margin"
    android:paddingTop="@dimen/message_vertical_margin"
    android:paddingStart="@dimen/message_offset"
    android:paddingLeft="@dimen/message_offset"
    android:paddingEnd="@dimen/message_offset"
    android:paddingRight="@dimen/message_offset"
    >

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/message_text_size"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="end"
        android:gravity="end"
        android:paddingBottom="@dimen/message_vertical_margin"
        android:paddingRight="@dimen/message_vertical_margin"
        android:paddingEnd="@dimen/message_vertical_margin"
        android:paddingLeft="@dimen/message_vertical_margin"
        android:paddingStart="@dimen/message_vertical_margin"
        />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/time_text_size"
        android:layout_below="@id/message"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="end"
        android:gravity="end"
        />

</RelativeLayout>